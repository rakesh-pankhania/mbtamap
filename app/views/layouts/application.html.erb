<!DOCTYPE html>
<html>
  <head>
    <title>MBTA Map</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>" data-turbolinks-eval="false"></script>
    <% if Rails.env.production? -%>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-131050763-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-131050763-1');
    </script>
    <% end -%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to "MBTA Map", root_url, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Red Line", route_direction_path('red-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Orange Line", route_direction_path('orange-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Blue Line", route_direction_path('blue-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item dropdown bg-dark">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Green Line</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to "Green Line B", route_direction_path('green-line-b', 'inbound'), class: "dropdown-item" %>
              <%= link_to "Green Line C", route_direction_path('green-line-c', 'inbound'), class: "dropdown-item" %>
              <%= link_to "Green Line D", route_direction_path('green-line-d', 'inbound'), class: "dropdown-item" %>
              <%= link_to "Green Line E", route_direction_path('green-line-e', 'inbound'), class: "dropdown-item" %>
            </div>
          </li>
          <li class="nav-item dropdown bg-dark">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Buses</a>
            <div class="dropdown-menu pre-scrollable" aria-labelledby="navbarDropdown">
              <% Route.where(route_type: 3).each do |bus| -%>
                <%= link_to bus.name, route_direction_path(bus.slug, 'inbound'), class: "dropdown-item" %>
              <% end -%>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
