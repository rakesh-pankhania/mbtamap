<!DOCTYPE html>
<html>
  <head>
    <title>MBTA Map</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to "MBTA Map", root_url, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Red Line", route_direction_path('red-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Green Line", route_direction_path('green-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Orange Line", route_direction_path('orange-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Blue Line", route_direction_path('blue-line', 'inbound'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Silver Line", route_direction_path('silver-line', 'inbound'), class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
